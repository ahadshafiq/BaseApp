<% provide(:title, 'All users') %>
<h1>All Users</h1>
<!-- will paginate looks for an instance variable with the same name as the controller
in this case the controller is users so it will look for @users from users-contrllers  -->
<%= form_tag users_path, :method => 'get' do %>
	<div class="search">
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :name => nil, class: "btn btn-large btn-primary" %>
	</div>
<% end %>

<%= will_paginate %>
<ul class="users">
	<% @users.all.each do |user| %>
		<%= render 'user', user: user %>
	<% end %>
</ul>
<%= will_paginate %>


